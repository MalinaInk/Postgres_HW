CREATE DATABASE skypro;
\c skypro
CREATE TABLE employee(
id BIGSERIAL NOT NULL PRIMARY KEY,
first_name VARCHAR(50) NOT NULL,
last_name VARCHAR(50) NOT NULL,
gender VARCHAR(6) NOT NULL,
age INT NOT NULL
);

//Задание  1

INSERT INTO employee(
                     first_name, last_name, gender, age
) VALUES ('Ivan', 'Ivanov', 'male', 23),
         ('Natalia', 'Petrova', 'female', 21),
         ('Anton', 'Ignatovsky', 'male', 34);
INSERT INTO employee(
    first_name, last_name, gender, age
) VALUES ('Elena', 'Ponomareva', 'female', 36),
         ('Victor', 'Malinichev', 'male', 64);

SELECT (first_name) AS Имя,
       (last_name) AS Фамилия
       FROM employee;

SELECT * FROM employee
WHERE age NOT BETWEEN 30 AND  50;

SELECT * FROM employee
WHERE age BETWEEN 30 AND 50;

SELECT * FROM employee
ORDER BY last_name DESC;

SELECT * FROM  employee
WHERE first_name LIKE '_____%';

//Задание 2

UPDATE employee SET first_name = 'Ivan'
WHERE id = 3;
UPDATE employee SET first_name = 'Natalia'
WHERE id = 4;

SELECT * FROM employee;

SELECT (first_name) AS Имя,
       SUM (age) AS Суммарный_возраст
       FROM employee GROUP BY first_name;
SELECT * FROM employee;

SELECT (first_name) AS Имя,
       MIN (age) AS Минимальный_возраст
FROM employee GROUP BY first_name;

SELECT first_name AS Имя,
       MAX (age) AS Максимальный_возраст
FROM employee GROUP BY first_name
    HAVING count(first_name) > 1 ORDER BY Максимальный_возраст ASC;
